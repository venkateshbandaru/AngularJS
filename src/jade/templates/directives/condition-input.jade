div(ng-switch="type").condition-input
  doubled-input(ng-switch-when="$between", value="$parent.value", disabled="disabled", required="required")
  input.form-control(ng-switch-default, ng-if="!$parent.number" ng-model="$parent.$parent.value", ng-disabled="disabled", ng-required="required")
  input.form-control(
    ng-switch-default,
    type="text",
    pattern="[\\d\\,true]+",
    ng-if="$parent.number"
    ng-model="$parent.$parent.value",
    ng-disabled="disabled",
    ng-required="required"
  )
