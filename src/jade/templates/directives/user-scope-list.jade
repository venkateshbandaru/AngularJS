div
  .form-control-heading-small Project
  .checkbox-group
    .checkbox-inline(ng-repeat="scope in ['project_update','project_delete']"): label(has-access="{{scope}}", project="project")
      input(type="checkbox", checklist-model="model", checklist-value="scope", ng-required="isRequired")
      | {{('scopes.users.' + scope + '.small') | translate}}
